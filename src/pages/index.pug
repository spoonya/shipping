extends common/layout

block content
  main.content(style="background-image: url(assets/img/jpg/bg.jpg)")
    .container
      .content__inner
        form#form-inspection.form(action="#" method="POST" name="inspection")
          .form__tab(data-tab="briefcases")
            .form__header
              .form__title
                p Briefcases
              button.form__header-button.form__header-button--right(type="button" data-tab-target="briefcases-answers") Answers
            .form__inner
              ul.form__cases
                li
                  .form__cases-img
                    img(src="assets/img/svg/case.svg", with="130", height="130", alt="")
                  .form__cases-content
                    .form__cases-header
                      p.form__cases-header-title Kourus
                      .form__text.form__text--sm
                        p 15.04.2022
                    .form__cases-descrip
                      p.form__cases-city Shenzhen
                      .form__text
                        p Site Visit
                        p Administration Nacional de Combustibles Alcohol y Portland (ACAP)
                      .form__cases-test
                        span Test:&nbsp;
                        .form__text
                          p do not used
                li
                  .form__cases-img
                    img(src="assets/img/svg/case.svg", with="130", height="130", alt="")
                  .form__cases-content
                    .form__cases-header
                      p.form__cases-header-title Kourus
                      .form__text.form__text--sm
                        p 15.04.2022
                    .form__cases-descrip
                      p.form__cases-city Shenzhen
                      .form__text
                        p Site Visit
                        p Administration Nacional de Combustibles Alcohol y Portland (ACAP)
                      .form__cases-test
                        span Test:&nbsp;
                        .form__text
                          p do not used
            .form__bot
              button.form__button.form__button--secondary(type="button" data-tab-target="briefcases-add") + Add
              button.form__button.form__button--circle(type="button")
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M18 7L10.5 15L3 7" stroke="white" stroke-width="2"/>
                </svg>

          .form__tab(data-tab="briefcases-answers")
            .form__header
              .form__title
                p Answers
              button.form__header-button.form__header-button--right(type="button" data-tab-target="briefcases") Briefcases

          .form__tab(data-tab="briefcases-add")
            .form__header
              .form__title
                p Add briefcase
              button.form__header-button.form__header-button--right(type="button" data-tab-target="briefcases") Briefcases
