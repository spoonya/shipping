extends common/layout

block content
  main.content
    .container
      .content__inner
        form.form(method="POST" name="sign-in")
          .form__tab.active
            .form__header
              .form__title.form__title--wide
                p Sign in to your account
            .form__inner
              .form__control
                input.form__input(type="text", name="login", placeholder="Login", required)
              .form__control
                input.form__input(type="password", name="password", placeholder="Password", required)
            .form__bot.form__bot--justify-end
              button.form__button.form__button--media-wide(type="submit") Sign in
